{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node",
	"extends": "./base.json",
	"compilerOptions": {
		"target": "esnext",
		"lib": ["esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"incremental": true,
		"esModuleInterop": true,
		"moduleResolution": "bundler",
		"module": "esnext",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve"
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}

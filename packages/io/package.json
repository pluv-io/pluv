{
	"name": "@pluv/io",
	"version": "0.20.0",
	"description": "@pluv/io server-side websocket manager",
	"author": "leedavidcs",
	"license": "MIT",
	"homepage": "https://github.com/pluv-io/pluv",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pluv-io/pluv.git",
		"directory": "packages/server"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "pnpm run version && tsup src/index.ts --format esm,cjs --dts",
		"dev": "tsup src/index.ts --format esm,cjs --watch --dts",
		"lint": "eslint src/**/*.ts* --fix",
		"clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
		"version": "genversion ./src/version.generated.ts --esm"
	},
	"dependencies": {
		"@panva/hkdf": "^1.2.1",
		"@pluv/crdt": "workspace:^",
		"@pluv/types": "workspace:^",
		"jose": "^5.6.3",
		"kleur": "^4.1.5",
		"wonka": "^6.3.4"
	},
	"devDependencies": {
		"@pluv/tsconfig": "workspace:^",
		"eslint": "^8.57.0",
		"eslint-config-pluv": "workspace:^",
		"genversion": "^3.2.0",
		"tsup": "^8.2.4",
		"typescript": "^5.5.4"
	}
}

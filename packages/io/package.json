	"dependencies": {
		"@panva/hkdf": "^1.1.1",
		"@pluv/crdt-yjs": "workspace:^",
		"@pluv/types": "workspace:^",
		"jose": "^4.15.2",
		"kleur": "^4.1.5",
		"wonka": "^6.3.4"
	},
	"peerDependencies": {
		"yjs": "^13.0.0"
	},
	"devDependencies": {
		"@pluv/tsconfig": "workspace:^",
		"eslint": "^8.51.0",
		"eslint-config-pluv": "workspace:^",
		"tsup": "^7.2.0",
		"typescript": "^5.2.2",
		"yjs": "^13.6.8"
	}

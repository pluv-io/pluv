{
	"name": "@pluv/io",
	"version": "3.2.2",
	"description": "@pluv/io server-side websocket manager",
	"author": {
		"email": "david@pluv.io",
		"name": "i3dly",
		"url": "https://github.com/i3dly"
	},
	"license": "MIT",
	"homepage": "https://github.com/pluv-io/pluv",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pluv-io/pluv.git",
		"directory": "packages/server"
	},
	"type": "module",
	"types": "./dist/index.d.mts",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "pnpm run version && tsdown",
		"dev": "tsdown --watch",
		"lint": "eslint \"src/**/*.ts*\" --fix --max-warnings 0",
		"typecheck": "tsc --noEmit",
		"clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
		"version": "genversion ./src/version.generated.ts --esm"
	},
	"dependencies": {
		"@panva/hkdf": "^1.2.1",
		"@pluv/crdt": "workspace:^",
		"@pluv/types": "workspace:^",
		"jose": "^6.1.3",
		"kleur": "^4.1.5",
		"wonka": "^6.3.5"
	},
	"devDependencies": {
		"@pluv/tsconfig": "workspace:^",
		"eslint": "^9.39.2",
		"eslint-config-pluv": "workspace:^",
		"genversion": "^3.2.0",
		"tsdown": "0.20.0-beta.3",
		"typescript": "^5.9.3"
	},
	"exports": {
		".": "./dist/index.mjs",
		"./*": "./*"
	}
}

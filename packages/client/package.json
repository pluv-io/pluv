	"license": "MIT",
	"homepage": "https://github.com/pluv-io/pluv",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/pluv-io/pluv.git",
		"directory": "packages/client"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"publishConfig": {

		"wonka": "^6.3.2"
	},
	"peerDependencies": {
		"yjs": "^13.0.0"
	},
	"devDependencies": {
		"@pluv/tsconfig": "workspace:^",
		"eslint-config-pluv": "workspace:^",
		"tsup": "^6.7.0",
		"typescript": "^5.1.3",
		"yjs": "^13.6.2"

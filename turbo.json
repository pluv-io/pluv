{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "dev": {
      "cache": false,
      "dependsOn": [
        "^dev"
      ]
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "playwright-report/**",
        ".next/**"
      ],
      "env": [
        "CI"
      ]
    }
  },
  "globalEnv": ["PLUV_AUTH_SECRET"]
}

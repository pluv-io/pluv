{
	"name": "@pluv-tests/e2e",
	"version": "0.0.0",
	"main": "./index.js",
	"scripts": {
		"dev": "concurrently \"pnpm:dev:client\" \"pnpm:dev:noop:server:node\" \"pnpm:dev:yjs:server:cloudflare\" \"pnpm:dev:yjs:server:node\" \"pnpm:dev:yjs:server:node-redis\"",
		"dev:client": "next dev --port 3100",
		"dev:loro:server:node": "ts-node --project ./src/server/loro/node/tsconfig.json ./src/server/loro/node --port 3112",
		"dev:noop:server:node": "ts-node --project ./src/server/noop/node/tsconfig.json ./src/server/noop/node --port 3122",
		"dev:yjs:server:cloudflare": "wrangler dev --port 3101",
		"dev:yjs:server:node": "ts-node --project ./src/server/yjs/node/tsconfig.json ./src/server/yjs/node -- --port 3102",
		"dev:yjs:server:node-redis": "ts-node --project ./src/server/yjs/node-redis/tsconfig.json ./src/server/yjs/node-redis -- --port 3103",
		"migrate:dev": "prisma migrate dev",
		"prisma": "prisma",
		"playwright": "playwright",
		"start": "next start",
		"test": "playwright test",
		"test:noop:node": "playwright test ./src/tests/noop/node/**/*",
		"test:loro:node": "playwright test ./src/tests/loro/node/**/*",
		"test:yjs:cloudflare": "wrangler deploy --dry-run && playwright test ./src/tests/yjs/cloudflare/**/*",
		"test:yjs:node": "prisma migrate reset --force && playwright test ./src/tests/yjs/node/**/*",
		"test:yjs:node-redis": "playwright test ./src/tests/yjs/node-redis/**/*",
		"tsc:check": "tsc --noEmit"
	},
	"private": true,
	"dependencies": {
		"@pluv-internal/react-hooks": "workspace:^",
		"@pluv/addon-indexeddb": "workspace:^",
		"@pluv/client": "workspace:^",
		"@pluv/crdt-loro": "workspace:^",
		"@pluv/crdt-yjs": "workspace:^",
		"@pluv/io": "workspace:^",
		"@pluv/persistence-redis": "workspace:^",
		"@pluv/platform-cloudflare": "workspace:^",
		"@pluv/platform-node": "workspace:^",
		"@pluv/pubsub-redis": "workspace:^",
		"@pluv/react": "workspace:^",
		"@pluv/types": "workspace:^",
		"@prisma/client": "^6.3.1",
		"@types/body-parser": "^1.19.5",
		"@types/common-tags": "^1.8.4",
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/ms": "^2.1.0",
		"@types/node": "^22.13.1",
		"@types/react": "^19.0.8",
		"@types/react-dom": "^19.0.3",
		"@types/ws": "^8.5.14",
		"body-parser": "^1.20.3",
		"commander": "^13.1.0",
		"common-tags": "^1.8.2",
		"cors": "^2.8.5",
		"express": "^5.0.1",
		"ioredis": "^5.5.0",
		"loro-crdt": "^1.3.5",
		"ms": "^2.1.3",
		"next": "15.1.6",
		"path-to-regexp": "^8.2.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"ws": "^8.18.0",
		"yjs": "^13.6.23",
		"zod": "^3.24.1"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250204.0",
		"@playwright/test": "^1.50.1",
		"@pluv/tsconfig": "workspace:^",
		"concurrently": "^9.1.2",
		"eslint-config-pluv": "workspace:^",
		"miniflare": "^3.20250129.0",
		"prisma": "^6.3.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.7.3",
		"wrangler": "^3.107.3"
	}
}

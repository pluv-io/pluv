{
	"name": "@pluv-tests/e2e",
	"version": "0.0.0",
	"sideEffects": false,
	"private": true,
	"type": "module",
	"scripts": {
		"cf:typegen": "wrangler types --env-interface CloudflareEnv ./cf.d.ts",
		"dev": "concurrently \"pnpm:dev:client\" \"pnpm:dev:noop:server:node\" \"pnpm:dev:yjs:server:cloudflare\" \"pnpm:dev:yjs:server:node\" \"pnpm:dev:yjs:server:node-redis\"",
		"dev:client": "next dev --port 3100",
		"dev:loro:server:node": "tsx --tsconfig ./src/server/loro/node/tsconfig.json ./src/server/loro/node/index.ts --port 3112",
		"dev:noop:server:node": "tsx --tsconfig ./src/server/noop/node/tsconfig.json ./src/server/noop/node/index.ts --port 3122",
		"dev:yjs:server:cloudflare": "wrangler dev --port 3101",
		"dev:yjs:server:node": "tsx --tsconfig ./src/server/yjs/node/tsconfig.json ./src/server/yjs/node/index.ts -- --port 3102",
		"dev:yjs:server:node-redis": "tsx --tsconfig ./src/server/yjs/node-redis/tsconfig.json ./src/server/yjs/node-redis/index.ts -- --port 3103",
		"lint": "eslint \"src/**/*.ts*\" --fix --max-warnings 0",
		"migrate:dev": "prisma migrate dev",
		"prisma": "prisma",
		"playwright": "playwright",
		"start": "next start",
		"test": "playwright test",
		"test:noop:node": "playwright test ./src/tests/noop/node/**/*",
		"test:loro:node": "playwright test ./src/tests/loro/node/**/*",
		"test:yjs:cloudflare-kv": "wrangler deploy --dry-run && playwright test ./src/tests/yjs/cloudflare-kv/**/*",
		"test:yjs:cloudflare-sqlite": "wrangler deploy --dry-run && playwright test ./src/tests/yjs/cloudflare-sqlite/**/*",
		"test:yjs:node": "prisma migrate reset --force && playwright test ./src/tests/yjs/node/**/*",
		"test:yjs:node-redis": "playwright test ./src/tests/yjs/node-redis/**/*",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@blocknote/core": "^0.44.0",
		"@blocknote/mantine": "^0.44.0",
		"@blocknote/react": "^0.44.0",
		"@hono/node-server": "^1.19.6",
		"@lexical/react": "^0.38.2",
		"@lexical/utils": "^0.38.2",
		"@lexical/yjs": "^0.38.2",
		"@pluv/addon-indexeddb": "workspace:^",
		"@pluv/client": "workspace:^",
		"@pluv/crdt-loro": "workspace:^",
		"@pluv/crdt-yjs": "workspace:^",
		"@pluv/io": "workspace:^",
		"@pluv/persistence-cloudflare-transactional-storage": "workspace:^",
		"@pluv/persistence-redis": "workspace:^",
		"@pluv/platform-cloudflare": "workspace:^",
		"@pluv/platform-node": "workspace:^",
		"@pluv/platform-pluv": "workspace:^",
		"@pluv/pubsub-redis": "workspace:^",
		"@pluv/react": "workspace:^",
		"@pluv/types": "workspace:^",
		"@prisma/client": "^6.18.0",
		"@slate-yjs/core": "^1.0.2",
		"@types/common-tags": "^1.8.4",
		"@types/cors": "^2.8.19",
		"@types/ms": "^2.1.0",
		"@types/node": "^24.10.1",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"@types/ws": "^8.18.1",
		"commander": "^14.0.2",
		"common-tags": "^1.8.2",
		"hono": "^4.10.7",
		"ioredis": "^5.8.2",
		"lexical": "^0.38.2",
		"loro-crdt": "^1.10.2",
		"ms": "^2.1.3",
		"next": "15.5.3",
		"path-to-regexp": "^8.3.0",
		"react": "^19.2.1",
		"react-dom": "^19.2.1",
		"slate": "^0.120.0",
		"slate-react": "^0.120.0",
		"ws": "^8.18.3",
		"yjs": "^13.6.27",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20251205.0",
		"@playwright/test": "^1.57.0",
		"@pluv/tsconfig": "workspace:^",
		"concurrently": "^9.2.1",
		"eslint": "^9.39.1",
		"eslint-config-pluv": "workspace:^",
		"miniflare": "^4.20251202.1",
		"prisma": "^6.18.0",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"wrangler": "^4.53.0"
	}
}

		"@pluv/pubsub-redis": "workspace:^",
		"@pluv/react": "workspace:^",
		"@pluv/types": "workspace:^",
		"@prisma/client": "^5.3.1",
		"@types/body-parser": "^1.19.3",
		"@types/common-tags": "^1.8.2",
		"@types/cors": "^2.8.14",
		"@types/express": "^4.17.17",
		"@types/ms": "^0.7.31",
		"@types/node": "^20.6.3",
		"@types/react": "18.2.22",
		"@types/react-dom": "^18.2.7",
		"@types/ws": "^8.5.5",
		"body-parser": "^1.20.2",

{
	"name": "@pluv-tests/e2e",
	"version": "0.0.0",
	"main": "./index.js",
	"scripts": {
		"dev": "concurrently \"pnpm:dev-client\" \"pnpm:dev-server-cloudflare\" \"pnpm:dev-server-node\" \"pnpm:dev-server-node-redis\"",
		"dev-client": "next dev --port 3100",
		"dev-server-cloudflare": "wrangler publish --dry-run --outdir=dist && miniflare ./dist/index.js --modules --port 3101",
		"dev-server-node": "ts-node --project ./src/server/node/tsconfig.json ./src/server/node -- --port 3102",
		"dev-server-node-redis": "ts-node --project ./src/server/node/tsconfig.json ./src/server/node-redis -- --port 3103",
		"start": "next start",
		"test": "playwright test",
		"test:cloudflare": "playwright test ./src/tests/cloudflare/",
		"test:node": "playwright test ./src/tests/node/",
		"test:node-redis": "playwright test ./src/tests/node-redis/"
	},

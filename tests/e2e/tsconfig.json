    "exclude": [ "node_modules"],
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": false,
        "declarationMap": false,
        "paths": {
            "@pluv-internal/react-hooks": ["../../internal/react-hooks/src"],
			"@pluv/client": ["../../packages/client/dist"],

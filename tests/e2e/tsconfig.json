			"@pluv/platform-node": ["../../packages/platform-node/dist"],
			"@pluv/react": ["../../packages/react/dist"],
			"@pluv/types": ["../../packages/types/dist"],
			"ws": ["./node_modules/@types/ws"]
		}
    }
}

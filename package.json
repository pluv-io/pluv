{
    "name": "pluv-monorepo",
    "private": true,
    "engines": {
        "node": ">=22.0.0"
    },
    "packageManager": "pnpm@10.12.2+sha512.a32540185b964ee30bb4e979e405adc6af59226b438ee4cc19f9e8773667a66d302f5bfee60a39d3cac69e35e4b96e708a71dd002b7e9359c4112a1722ac323f",
    "scripts": {
        "build": "turbo run build",
        "build:internal": "turbo run build --filter=./internal/*",
        "build:packages": "turbo run build --filter=./packages/*",
        "changeset": "changeset",
        "clean": "turbo run clean && rm -rf node_modules",
        "commit": "cz",
        "dev": "turbo run dev --parallel",
        "dev:web": "turbo run dev --parallel --filter=./apps/*",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "lint": "turbo run lint",
        "release": "turbo run build --filter=./packages/* && changeset publish",
        "services:start": "docker compose up -d",
        "services:stop": "docker compose down",
        "test": "turbo run test",
        "test:e2e": "turbo run test --filter=@pluv-tests/e2e...",
        "test:types": "turbo run test --filter=@pluv-tests/types...",
        "turbo": "turbo",
        "version-packages": "changeset version"
    },
    "devDependencies": {
        "@changesets/cli": "^2.29.4",
        "commitizen": "^4.3.1",
        "cz-conventional-changelog": "^3.3.0",
        "prettier": "^3.5.3",
        "turbo": "^2.5.4"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "@prisma/client",
            "@prisma/engines",
            "core-js-pure",
            "esbuild",
            "prisma",
            "sharp",
            "workerd"
        ]
    }
}

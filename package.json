{
    "name": "pluv-monorepo",
    "private": true,
    "engines": {
        "node": ">=24.0.0"
    },
    "packageManager": "pnpm@10.21.0+sha512.da3337267e400fdd3d479a6c68079ac6db01d8ca4f67572083e722775a796788a7a9956613749e000fac20d424b594f7a791a5f4e2e13581c5ef947f26968a40",
    "scripts": {
        "build": "turbo run build",
        "build:internal": "turbo run build --filter=./internal/*",
        "build:packages": "turbo run build --filter=./packages/*",
        "changeset": "changeset",
        "clean": "turbo run clean && rm -rf node_modules",
        "commit": "cz",
        "dev": "turbo run dev --parallel",
        "dev:web": "turbo run dev --parallel --filter=./apps/*",
        "format": "prettier --write \"**/*.{ts,tsx,md}\"",
        "lint": "turbo run lint",
        "release": "turbo run build --filter=./packages/* && changeset publish",
        "services:start": "docker compose up -d",
        "services:stop": "docker compose down",
        "test": "turbo run test",
        "test:e2e": "turbo run test --filter=@pluv-tests/e2e...",
        "test:types": "turbo run test --filter=@pluv-tests/types...",
        "typecheck": "turbo run typecheck",
        "turbo": "turbo",
        "version-packages": "changeset version"
    },
    "devDependencies": {
        "@changesets/cli": "^2.29.7",
        "commitizen": "^4.3.1",
        "cz-conventional-changelog": "^3.3.0",
        "prettier": "^3.6.2",
        "turbo": "^2.6.0"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "@prisma/client",
            "@prisma/engines",
            "core-js-pure",
            "esbuild",
            "prisma",
            "sharp",
            "workerd"
        ]
    }
}
